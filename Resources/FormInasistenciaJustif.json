{
  "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "minHeight": "50px",
      "backgroundImage": "https://pevaaar.azurewebsites.net/wp-content/uploads/2017/03/logo.png",
      "fillMode": "Repeat",
      "items": [
        {
          "type": "TextBlock",
          "text": "Formulario de Inasistencia",
          "size": "large",
          "weight": "bolder",
          "isSubtle": false
        },
        {
          "separator": true,
          "spacing": "medium",
          "text": "Por favor complete el formulario para enviar su solicitud:",
          "italic": true,
          "color": "attention",
          "weight": "bolder",
          "type": "TextBlock"
        },
        {
          "type": "TextBlock",
          "text": "Por favor ingrese su nombre completo:",
          "separator": true,
          "spacing": "medium"
        },
        {
          "type": "Input.Text",
          "id": "id_name"
        },
        {
          "type": "TextBlock",
          "text": "Por favor ingrese la Justificación de la ausencia:",
          "separator": true,
          "spacing": "medium"
        },
        {
          "type": "Input.Text",
          "style": "text",
          "isMultiline": true,
          "id": "id_description"
        },
        {
          "type": "TextBlock",
          "text": "Por favor ingrese la fecha inicial de ausencia:",
          "separator": true,
          "spacing": "medium"
        },
        {
          "type": "Input.Date",
          "id": "id_dateI",
          "placeholder": "Ingrese la fecha",
          "value": "2021-10-12"
        },
        {
          "type": "TextBlock",
          "text": "Por favor ingrese la fecha final de ausencia:",
          "separator": true,
          "spacing": "medium"
        },
        {
          "type": "Input.Date",
          "id": "id_dateF",
          "placeholder": "Ingrese la fecha",
          "value": "2021-10-12"
        },
        {
          "type": "TextBlock",
          "text": "Por favor seleccione los Líderes técnicos a notificar:",
          "separator": true,
          "spacing": "medium"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "Lideres",
          "style": "expanded",
          "isMultiSelect": true,
          "label": "Lideres técnicos a notificar:",
          "isRequired": true,
          "errorMessage": "Este campo es obligatorio",
          "choices": [
            {
              "title": "Bayron Lara",
              "value": "Bayron Lara"
            },
            {
              "title": "Jorge Vizcaino",
              "value": "Jorge Vizcaino"
            },
            {
              "title": "Saul Rodriguez",
              "value": "Saul Rodriguez"
            },
            {
              "title": "Javier Salazar Perez",
              "value": "Javier Salazar Perez"
            },
            {
              "title": "Danilo Alonso Pineda Henao",
              "value": "Danilo Alonso Pineda Henao"
            },
            {
              "title": "Sergio Andres Castro Castro",
              "value": "Sergio Andres Castro Castro"
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "Por favor ingrese un telefono de contacto:",
          "separator": true,
          "spacing": "medium"
        },
        {
          "type": "Input.Text",
          "id": "id_phone"
        },
        {
          "type": "TextBlock",
          "text": "Por favor ingrese su correo:",
          "separator": true,
          "pattern": "^([a-zA-Z0-9_\\-\\.]+)@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.)|(([a-zA-Z0-9\\-]+\\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\\]?)$",
          "spacing": "medium"
        },
        {
          "type": "Input.Text",
          "id": "id_mail"
        },
        {
          "type": "Input.Toggle",
          "id": "acceptTerms",
          "isRequired": true,
          "errorMessage": "Este campo es obligatorio",
          "title": "Acepto los terminos generales de la política de tratamiento de Datos.",
          "wrap": true,
          "value": "true",
          "valueOn": "true",
          "valueOff": "false"

        }
      ]
    }
  ],
      "actions":
      [
        {
          "type": "Action.Submit",
          "title": "Enviar",
          "data": {
            "form": "Inasistencia"
          }
        }
      ]

}
