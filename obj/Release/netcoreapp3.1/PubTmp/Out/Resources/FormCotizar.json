{
  "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Formulario de Cotización",
      "size": "large",
      "weight": "bolder",
      "isSubtle": false
    },
    {
      "type": "TextBlock",
      "text": "Por favor complete el formulario para atender a su solicitud:",
      "separator": true,
      "spacing": "medium"
    },
    {
      "type": "TextBlock",
      "text": "Por favor ingrese su nombre completo o el de la entidad:",
      "separator": true,
      "spacing": "medium"
    },
    {
      "type": "Input.Text",
      "id": "id_name"
    },
    {
      "type": "TextBlock",
      "text": "Por favor ingrese una descripción del servicio que desea:",
      "separator": true,
      "spacing": "medium"
    },
    {
      "type": "Input.Text",
      "style": "text",
      "isMultiline": true,
      "id": "id_description"
    },
    {
      "type": "TextBlock",
      "text": "Por favor ingrese un telefono de contacto:",
      "separator": true,
      "spacing": "medium"
    },
    {
      "type": "Input.Text",
      "id": "id_phone"
    },
    {
      "type": "TextBlock",
      "text": "Por favor ingrese su correo:",
      "separator": true,
      "pattern": "^([a-zA-Z0-9_\\-\\.]+)@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.)|(([a-zA-Z0-9\\-]+\\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\\]?)$",
      "spacing": "medium"
    },
    {
      "type": "Input.Text",
      "id": "id_mail"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Enviar",
      "data": {
        "prop1": true,
        "prop2": []
      }
    }
  ]
}
